@{
}
<h1>Blog posts</h1>

<div class="row mb-2">
    @foreach (var post in ViewBag.Posts)
	{
    <div class="col-md-6">
        <div class="card flex-md-row mb-4 box-shadow h-md-250">
            <div class="card-body d-flex flex-column align-items-start">
                <h3 class="mb-0">
                        <a asp-controller="BlogPost" asp-action="Post" asp-route-id="@post.BlogPostId" class="text-dark">@post.Title</a>
                </h3>
                    <div class="mb-1 text-muted">@post.DatePosted</div>
                    @* get the first 90 chars from the description*@
                <p class="card-text mb-auto">@post.Content.Substring(0, Math.Min(90, @post.Content.Length))...</p>
                    <strong class="d-inline-block mb-2 text-success">Post by @post.User.Username</strong>
                    <a asp-controller="BlogPost" asp-action="Post" asp-route-id="@post.BlogPostId">Continue reading</a>
            </div>
                <img class="card-img-right flex-auto d-none d-md-block" data-src="holder.js/200x250?theme=thumb" alt="Thumbnail [200x250]" style="width: 200px; height: 250px;" src="@post.ImageUrl" data-holder-rendered="true">
        </div>
    </div>
    }
</div>