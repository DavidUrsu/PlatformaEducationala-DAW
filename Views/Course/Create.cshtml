<form method="post">
	<h1 class="h3 mb-3 fw-normal">Create Course</h1>

	<div class="mb-3">
		<label for="CourseName" class="form-label">Course Name</label>
		<input type="text" class="form-control" id="courseName" name="courseName">
	</div>

	@* CourseName, CourseDescription, CoursePrice, CourseImage
	CourseImage is an url
	*@
	<div class="mb-3">
		<label for="CourseDescription" class="form-label">Course Description</label>
		<textarea class="form-control" id="courseDescription" name="courseDescription" rows="3"></textarea>
	</div>

	<div class="row g-3 align-items-center">
		<div class="col-auto">
			<label for="coursePrice" class="col-form-label">Price</label>
		</div>
		<div class="col-auto">
			<input type="number" id="coursePrice" name="coursePrice" class="form-control">
		</div>
		<div class="col-auto">
			<span id="coursePriceHelpInLine" class="form-text">
				&euro;
			</span>
		</div>
	</div>

	<div class="b-3">
		<label for="courseImage" class="form-label">Course Image</label>
		<input type="text" class="form-control" id="courseImage" name="courseImage" placeholder="Image URL" />
	</div>


	<button class="btn btn-primary w-100 py-2" type="submit">Create</button>
</form>